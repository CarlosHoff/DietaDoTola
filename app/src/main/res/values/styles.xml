<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="edittext_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">13dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">#54FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginStart">25sp</item>
        <item name="android:layout_marginEnd">25sp</item>
    </style>

    <style name="texto_lista_dieta">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>

    <style name="CustomSlider" parent="Widget.AppCompat.SeekBar">
        <item name="android:tickMark">@null</item>
        <item name="android:thumb">@drawable/custom_slider_thumb</item>
    </style>

    <style name="texto_radio_button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>